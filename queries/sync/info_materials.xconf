<?xml version="1.0" encoding="utf-8"?>
<info_materials templ="%infom_id%;%descr%;%rc_id%;%chan_ids%;%blob%;%content_type%;" empty="no">
  <![CDATA[ 
select infom_id, descr, blob, content_type, rc_id, array_to_string(chan_ids,',') chan_ids, dep_id, country_id from info_materials
    where hidden = 0 and (b_date is null or b_date<=current_date::date_t) and (e_date is null or current_date::date_t<=e_date)
order by row_no, descr
  ]]>
</info_materials>