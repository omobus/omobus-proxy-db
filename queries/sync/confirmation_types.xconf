<?xml version="1.0" encoding="utf-8"?>
<confirmation_types templ="%confirm_id%;%target_type_ids%;%descr%;%min_note_length%;%photo_needed%;" empty="no">
  <![CDATA[ 
select confirm_id, array_to_string(target_type_ids,',') target_type_ids, descr, min_note_length, photo_needed from confirmation_types
    where hidden = 0
order by confirm_id
  ]]>
</confirmation_types>