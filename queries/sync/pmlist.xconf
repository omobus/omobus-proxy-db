<?xml version="1.0" encoding="utf-8"?>
<pmlist templ="%account_id%;%prod_id%;%b_date%;%e_date%;" empty="no">
  <![CDATA[
select account_id, prod_id, b_date, e_date from pmlist
    where (b_date <= (current_date+15)::date_t and current_date::date_t <= e_date) or (b_date = '' and e_date = '')
order by 1, 2, 3
  ]]>
</pmlist>