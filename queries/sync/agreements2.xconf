<?xml version="1.0" encoding="utf-8"?>
<agreements2 templ="%account_id%;%prod_id%;%b_date%;%e_date%;%facing%;" empty="no">
  <![CDATA[ 
select account_id, prod_id, facing, b_date, e_date from agreements2
    where (b_date <= (current_date+15)::date_t and current_date::date_t <= e_date) or (b_date = '' and e_date = '')
order by 1, 2, 4
  ]]>
</agreements2>