<?xml version="1.0" encoding="utf-8"?>
<equipments templ="%account_id%;%equipment_id%;%equipment_type_id%;%ownership_type_id%;%serial_number%;%extra_info%;" empty="no">
  <![CDATA[ 
select equipment_id, account_id, equipment_type_id, ownership_type_id, serial_number, extra_info from equipments
    where hidden = 0
order by account_id, serial_number, equipment_id
  ]]>
</equipments>