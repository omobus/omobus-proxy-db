<?xml version="1.0" encoding="utf-8"?>
<my_kpi templ="%user_id%;%kpi_id%;%descr0%;%descr1%;">
<verification>
  <![CDATA[
select count(*) from data_stream
    where s_id = '//%uid%/%pack_code%' and digest = '%pack_digest%'
  ]]>
</verification>
<begin>
  <![CDATA[
delete from my_kpi
    where "_isAlienData" = 1 and db_ids = (array['%ErpCode%'])::uids_t;
update my_kpi set db_ids=array_remove(db_ids,'%ErpCode%')
    where "_isAlienData" = 1 and db_ids @> (array['%ErpCode%'])::uids_t;
delete from my_kpi
    where "_isAlienData" = 1 and (db_ids is null or cardinality(db_ids)=0);
  ]]>
</begin>
<insert>
  <![CDATA[
insert into my_kpi (kpi_id, user_id, descr0, descr1, db_ids, "_isAlienData") 
    values ('%kpi_id%', '%user_id%', '%descr0%', '%descr1%', array['%ErpCode%'], 1)
on conflict do nothing
  ]]>
</insert>
<end>
  <![CDATA[
select stor_data_stream('//%uid%/%pack_code%', '%pack_digest%', '%server_hostname%')
  ]]>
</end>
</my_kpi>