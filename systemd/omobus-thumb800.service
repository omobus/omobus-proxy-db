[Unit]
Description=OMOBUS server (thumb 800px)
After=local-fs.target network.target pgsql.service
#Requires=pgsql.service

[Service]
#Type=forking
PIDFile=/var/run/omobus.d/omobus-thumb800.pid
ExecStartPre=/bin/mkdir -m 0755 -p /var/run/omobus.d
ExecStartPre=/bin/chown omobus:omobus /var/run/omobus.d
ExecStart=/usr/local/sbin/omobusd thumb800 -x -u omobus -g omobus -p /var/run/omobus.d/omobus-thumb800.pid
ExecStop=/bin/kill -s USR1 $MAINPID

[Install]
WantedBy=multi-user.target
